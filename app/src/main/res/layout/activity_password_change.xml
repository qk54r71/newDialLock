<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diallock.diallock.diallock.Activity.Activity.PasswordChangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="잠금 해제 비밀번호를 선택합니다."
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pass_txt_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="#000000"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical">

        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/dial_password_change"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@drawable/dial_image_press_off"
            app:arc_axisRadius="128dp"
            app:arc_freeAngle="false"
            app:arc_origin="center"
            app:arc_radius="135dp"
            app:arc_reverseAngle="false">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_00"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_01"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_02"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_04"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_05"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_06"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_07"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_08"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_change_btn_index_09"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:arc_origin="center" />
        </com.ogaclejapan.arclayout.ArcLayout>
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@null"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_btn_cancle"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="-30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pass_btn_ok"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="-30dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
