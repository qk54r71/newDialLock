<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <com.diallock.diallock.diallock.Activity.Layout.ViewPager.HorizontalViewPager
        android:id="@+id/widget_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:background="@drawable/widget_circle_bg" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.diallock.diallock.diallock.Activity.Layout.DialLayout
            android:id="@+id/dialLayout"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:background="@drawable/dial_image"
            app:arc_axisRadius="106.5dp"
            app:arc_freeAngle="false"
            app:arc_origin="center"
            app:arc_radius="135dp"
            app:arc_reverseAngle="false">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_00"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_0"
                app:arc_angle="15"
                app:arc_origin="center" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_1"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_02"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_2"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_03"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_3"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_04"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_4"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_05"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_5"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_06"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_6"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_07"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_7"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_08"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_8"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_09"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_9"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_0"
                app:arc_angle="315"
                app:arc_origin="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btn_index_11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/num_1"
                app:arc_origin="center" />


        </com.diallock.diallock.diallock.Activity.Layout.DialLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoText="false"
        android:background="@drawable/txt_bg"
        android:padding="10dp"
        android:text="플레이스토어에 등록된 이메일로 패스워드가 발송됩니다."
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

</FrameLayout>
